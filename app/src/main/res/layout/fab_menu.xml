<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/border_background"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewCheckIn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@drawable/checkinicon"
            android:drawablePadding="15dp"
            android:fontFamily="sans-serif"
            android:paddingStart="5dp"
            android:paddingTop="8dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="Check In"
            android:textAlignment="viewStart"
            android:textColor="#151515"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewCheckOut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@drawable/checkouticon"
            android:drawablePadding="15dp"
            android:fontFamily="sans-serif"
            android:paddingStart="5dp"
            android:paddingTop="8dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="Check out"
            android:textAlignment="viewStart"
            android:textColor="#151515"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewRoomService"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@drawable/roomservice"
            android:drawablePadding="15dp"
            android:fontFamily="sans-serif"
            android:paddingStart="5dp"
            android:paddingTop="8dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="Room Service"
            android:textAlignment="viewStart"
            android:textColor="#151515"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewAddRoom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@drawable/roomicon"
            android:drawablePadding="15dp"
            android:fontFamily="sans-serif"
            android:paddingStart="5dp"
            android:paddingTop="8dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="Add Room"
            android:textAlignment="viewStart"
            android:textColor="#151515"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewAddStaff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@drawable/addstafficon"
            android:drawablePadding="15dp"
            android:fontFamily="sans-serif"
            android:paddingStart="5dp"
            android:paddingTop="8dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="Add Staff"
            android:textAlignment="viewStart"
            android:textColor="#151515"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewAddMenuItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@drawable/menuicon"
            android:drawablePadding="25dp"
            android:fontFamily="sans-serif"
            android:paddingStart="5dp"
            android:paddingTop="8dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="Add Menu Item"
            android:textAlignment="viewStart"
            android:textColor="#151515"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>